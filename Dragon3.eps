%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 0 0 200 260
%%Pages: 3

%arrays mit den koordinaten der punkte
/xr [2 4 6 6 4 2 0 0] def
/yr [0 0 2 4 6 6 4 2] def
/xa [2 4 5 5 4 2 1 1] def
/ya [1 1 2 4 5 5 4 2] def
/xb [2 4 4 4 4 2 2 2] def
/yb [2 2 2 4 4 4 4 2] def

/s{ %erwartet 2 nummern von 0 bis 7, verbindet die anschlüsse
xr 1 index get yr 2 index get moveto
xa 1 index get ya 2 index get lineto
xb 1 index get yb 2 index get
xb 4 index get yb 5 index get
xa 6 index get ya 7 index get curveto
xr 2 index get yr 3 index get lineto
stroke pop pop
}def

/r{1 0 0 setrgbcolor}def   %rot     -> punktsymmetrisch, 90°
/g{0 .7 0 setrgbcolor}def  %grün    -> achsensymmetrisch gerade
/y{0 .7 .7 setrgbcolor}def %gelb    -> achsensymmetrisch schräg
/b{0 0 1 setrgbcolor}def   %blau    -> punktsymmetrisch, 180°
/k{0 0 0 setrgbcolor}def   %schwarz -> nicht symmetrisch

%einkommentieren für 'alle schwarz'
%/r{k}def/g{k}def/b{k}def/y{k}def

/rand{.1 setlinewidth k 0 0 6 6 rectstroke .2 setlinewidth}def  %kartenrand
%/rand{gsave 2 2 translate 4 {2 1 moveto 3 1 lineto stroke 1 2 moveto 1 3 lineto stroke 90 rotate} repeat grestore .1 setlinewidth k -1 -1 6 6 rectstroke .2 setlinewidth}def  %kartenrand

%für positionen der karten
/c{/cox cox 1 add def cox 3 eq {/coy coy 1 add def /cox 0 def}if cox 6 mul 1 add coy 6 mul 1 add gsave translate}def
/t2{rand grestore}def

%c zu beginn einer karte
%#x #y s verbindet die anschlüsse #x und #y
%t2 am ende der karte

